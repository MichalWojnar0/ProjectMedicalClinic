@model Appointment
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="Appointments" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="AppId" />
    }

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="AppointmentDate" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="AppointmentDate" class="form-control" />
        </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="PatientId" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="PatientId" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="DoctorId" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="DoctorId" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="RoomId" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="RoomId" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="Notes" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Notes" class="form-control" />
                </div>
            </div>
            <div class="row mb-3 mt-4">
        <div class="col-2">
            <input type="submit" class="btn btn-outline-primary" value="Save" />
        </div>
        <div class="col-6"></div>
    </div>
</form>
