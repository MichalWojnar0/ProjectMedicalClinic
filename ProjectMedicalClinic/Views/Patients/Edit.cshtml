@model Patient

@section title {
    @if (Model != null)
    {
        <h3>Patient: @Model.FirstName</h3>

    }
}

<form method="post" asp-controller="patients" asp-action="edit">
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="FirstName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="LastName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
            
        </div>
    </div>
</form>